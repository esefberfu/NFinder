<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:divider="@drawable/divider"
              android:showDividers="middle">

    <LinearLayout
        android:padding="10dp"
        android:background="@color/white_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/contact_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/contact_icon"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="12pt"
            android:src="@drawable/_call"/>


        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="7pt"
            android:ellipsize="end"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/show_in_contact"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Rehberde\nGÃ¶ster"
            android:paddingRight="5dp"
            android:gravity="right|center"
            android:textSize="6pt"
            android:background="@drawable/share_button_click"
            android:textColor="@color/view_name_and_sub_text"/>

        <ImageView
            android:id="@+id/share_button"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:src="@drawable/share_color_filter"
            android:background="@drawable/share_button_click"
            android:textSize="6pt"
            android:textColor="@color/view_name_and_sub_text"/>


    </LinearLayout>


</LinearLayout>